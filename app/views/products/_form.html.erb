<%= form_for @product do |f| %>
  <%= render partial: "layouts/errors", locals: {record: @product}  %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :price %><br>
    <%= f.number_field :price %><br>
    <%= f.label :details%><br>
    <%= f.text_area :details %><br>
    <%= f.label :description %><br>
    <%= f.text_area :description, cols: 40, rows: 10 %><br>
    <%= f.label :category %><br>
    <%= f.text_field :category %><br>
    <%= f.label :image%><br>
    <%= f.text_field :image %><br>
    <%= f.label :brand_id %>
    <%= f.collection_select :brand_id, Brand.all, :id, :name %>
    <%= f.submit %>
  <% end %>