
<h1> Name </h1>
<h1><%= @product.name %></h1><br>
<h3> Price </h3>
<%= number_to_currency(@product.price) %><br>
<%= image_tag @product.image, width: "550" %><br>
<h3> Details </h3>
<%= @product.details %><br>
<h3> Description </h3>
<%= @product.description %><br>
<h3> Category </h3>
<%= @product.category %><br>
<%= button_to "Edit #{@product.name}", edit_product_path(@product), method: :get %><br>
<%= button_to "delete #{@product.name}", @product, method: :delete %>
 
<%= form_for [@product, @review] do |f| %>
   <%= render partial: "layouts/errors", locals: {record: @review}  %>
   <%= f.label :content %>
   <%= f.text_area :content, cols: 30, rows: 10 %>
   <%= f.submit  %>
   <% end %>
   <%= render @product.reviews %>